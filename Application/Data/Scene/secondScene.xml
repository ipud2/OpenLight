<?xml version="1.0" encoding="UTF-8"?>
<scene>
	<!-- 渲染器 -->
	<Renderer type="Sampler">
		<spp>64</spp>
	</Renderer>

	<!-- 图元 -->
	<primitive>
		<shape type="obj">
			<filename>sphere.obj</filename>
			<transform>
				<position>
					<x>0</x>
					<y>0</y>
					<z>10</z>
				</position>
			</transform>
			<radius>1</radius>
			<emmisive>
				<r>0.0</r>
				<g>0.0</g>
				<b>1.0</b>
			</emmisive>
		</shape>
		<shape type="obj">
			<filename>sphere.obj</filename>
			<transform>
				<position>
					<x>2</x>
					<y>0</y>
					<z>12</z>
				</position>
			</transform>
			<radius>1</radius>
			<emmisive>
				<r>1.0</r>
				<g>0.0</g>
				<b>0.0</b>
			</emmisive>
		</shape>
		<shape type="obj">
			<filename>sphere.obj</filename>
			<transform>
				<position>
					<x>-2</x>
					<y>0</y>
					<z>12</z>
				</position>
			</transform>
			<radius>1</radius>
			<emmisive>
				<r>0.0</r>
				<g>1.0</g>
				<b>0.0</b>
			</emmisive>
		</shape>
		<material type="diffuse">
			<Reflection>
				<r>1.0</r>
				<g>1.0</g>
				<b>1.0</b>
			</Reflection>
		</material>
	</primitive>

	<!-- Film -->
	<Film>
		<filename>result.ppm</filename>
		<width>800</width>
		<height>600</height>
	</Film>

	<!-- Camera -->
	<Camera type="ThinLens">
		<Position>
			<x>0.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</Position>
		<Target>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</Target>
		<LensFocus>12</LensFocus>
		<LensRadius>0.01</LensRadius>
		<ApertureResolution>
			<width>0.825</width>
			<height>0.446></height>
		</ApertureResolution>
		<ApertureDistance>35</ApertureDistance>
		<ExposureTime>0.0</ExposureTime>
		<ViewDistance>1.0</ViewDistance>
	</Camera>

	<!-- 采样器 -->
	<Sampler type="PureRandom">
		<SampleGroupCount>81</SampleGroupCount>
		<SampleCount>60</SampleCount>
	</Sampler>

	<!-- 积分器 -->
	<Integrator type="Whitted">
		<MaxDepth>5</MaxDepth>
		<SamplePathNumber>16</SamplePathNumber>
	</Integrator>
</scene>
