	<!-- Film -->
	<Film>
		<filename>result.ppm</filename>
		<width>100</width>
		<height>100</height>
	</Film>

	<!-- Camera -->
	<Camera type="PinholeCamera">
		<Position>
			<x>0.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</Position>
		<Target>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</Target>
		<LensFocus>12</LensFocus>
		<LensRadius>0.01</LensRadius>
		<ExposureTime>0.0</ExposureTime>
		<ViewDistance>1.0</ViewDistance>
		<Fovy>90</Fovy>
	</Camera>

	<!-- 采样器 -->
	<Sampler type="NRooksSampler">
		<SampleGroupCount>81</SampleGroupCount>
		<SampleCount>3000</SampleCount>
	</Sampler>

	<!-- 积分器 -->
	<Integrator type="WhittedIntegrator">
		<MaxDepth>2</MaxDepth>
		<SamplePathNumber>16</SamplePathNumber>
	</Integrator>
</scene>
